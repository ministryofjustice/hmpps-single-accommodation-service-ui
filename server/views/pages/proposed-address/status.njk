{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "pages/proposed-address/layout.njk" %}

{% set pageTitle = "What is the status of the address checks? " + applicationName %}
{% set backLinkHref = paths.proposedAddresses.type({ crn: crn }) %}
{% set formAction = paths.proposedAddresses.checkYourAnswers({ crn: crn }) %}

{% block formContent %}
{{ govukRadios({
      name: "status",
      fieldset: {
          legend: {
              text: "What is the status of the address checks?",
              classes: "govuk-fieldset__legend--l"
          }
      },
      items: [
          {
              value: "NOT_CHECKED_YET",
              text: "Not checked yet",
              checked: proposedAddress.status == "NOT_CHECKED_YET"
          },
          {
              value: "CHECKS_PASSED",
              text: "Passed",
              checked: proposedAddress.status == "CHECKS_PASSED"
          },
          {
              value: "CHECKS_FAILED",
              text: "Failed",
              checked: proposedAddress.status == "CHECKS_FAILED"
          },
          {
                value: "CONFIRMED",
                text: "Confirmed",
                checked: proposedAddress.status == "CONFIRMED"
          }
      ],
      errorMessage: errors.status
  }) }}
{% endblock %}