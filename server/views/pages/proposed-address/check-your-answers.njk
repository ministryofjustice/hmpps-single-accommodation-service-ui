{% extends "pages/proposed-address/layout.njk" %}

{% set pageTitle = "Check your answers before adding the address " + applicationName %}
{% set mainClasses = "govuk-body" %}

{% set backLinkHref = paths.proposedAddresses.status({ crn: crn }) %}
