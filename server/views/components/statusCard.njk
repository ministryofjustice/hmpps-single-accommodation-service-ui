{%- from "govuk/components/summary-list/macro.njk" import govukSummaryList -%}
{%- from "components/macros/statusTag.njk" import statusTag %}

<article class="sas-card{{ ' sas-card--inactive' if inactive else '' }}">
	<header class="sas-card__head">
		<h3 class="govuk-heading-m govuk-!-margin-bottom-0">{{ heading }}</h3>
    {% if status -%}
		  {{ statusTag(status) }}
    {%- endif %}
	</header>

	<div class="sas-card__footer">
		{% if details and (details | length > 0) %}
			{{ govukSummaryList({
				classes: 'sas-card-summary-list govuk-summary-list--no-border',
				rows: details
			}) }}
		{% endif %}

		{% if links and(links | length > 0) %}
			<div class="sas-card__links">
				{% for link in links %}
					<a class="govuk-body govuk-link govuk-link--no-visited-state" href="{{ link.href }}">{{ link.text }}</a>
				{% endfor %}
			</div>
		{% endif %}
	</div>
</article>
