{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "pages/proposed-address/layout.njk" %}

{% set pageTitle = "What is the status of the address checks? " + applicationName %}
{% set backLinkHref = paths.proposedAddresses.type({ crn: crn }) %}
{% set formAction = paths.proposedAddresses.status({ crn: crn }) %}

{% block formContent %}
{{ govukRadios({
      name: "verificationStatus",
      fieldset: {
          legend: {
              text: "What is the status of the address checks?",
              classes: "govuk-fieldset__legend--l"
          }
      },
      items: [
          {
              value: "NOT_CHECKED_YET",
              text: "Not checked yet",
              checked: proposedAddress.verificationStatus == "NOT_CHECKED_YET"
          },
          {
              value: "PASSED",
              text: "Passed",
              checked: proposedAddress.verificationStatus == "PASSED"
          },
          {
              value: "FAILED",
              text: "Failed",
              checked: proposedAddress.verificationStatus == "FAILED"
          }
      ],
      errorMessage: errors.verificationStatus
  }) }}
{% endblock %}